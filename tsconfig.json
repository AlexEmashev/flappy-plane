{
  "compilerOptions": {
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "@src/*": ["./src/*"]
    }
  }
}